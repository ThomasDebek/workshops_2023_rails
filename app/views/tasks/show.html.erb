<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <%= content_tag :div, class: "alert alert-info", id: "notice" do -%>
              <%= notice %>
            <% end if notice.present? -%>

            <% if @task.errors.any? %>
              <% @task.errors.full_messages.each do |message| %>
                <%= content_tag :div, class: "alert alert-danger", role: 'alert' do -%>
                  <%= message %>
                <% end -%>
              <% end %>
            <% end %>

            <h4 class="text-center my-3 pb-3">To Do App</h4>
            <div class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
              <%= button_to "Tasks list", tasks_path, method: :get, class: "btn btn-primary" %>
            </div>

            <p>
              <strong>Title:</strong>
              <%= @task.title %>
            </p>
            <p>
              <strong>Description:</strong>
              <%= @task.description %>
            </p>
            <p>
              <strong>Deadline:</strong>
              <%= @task.deadline.strftime('%Y-%m-%d') %>
            </p>

            <p>
              <strong>Finish:</strong>
              <%= @task.realizations.last&.done_at&.strftime('%Y-%m-%d')  %>
            </p>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
