<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <%= content_tag :div, class: "alert alert-info", id: "notice" do -%>
              <%= notice %>
            <% end if notice.present? -%>

            <% if @task.errors.any? %>
              <% @task.errors.full_messages.each do |message| %>
                <%= content_tag :div, class: "alert alert-danger", role: 'alert' do -%>
                  <%= message %>
                <% end -%>
              <% end %>
            <% end %>

            <h4 class="text-center my-3 pb-3">To Do App</h4>
            <div class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
              <%= button_to "Tasks list", tasks_path, method: :get, class: "btn btn-primary" %>
            </div>

            <%= form_with(model: @task) do |form| %>
              <div>
                <%= form.label :title, style: "display: block" %>
                <%= form.text_field :title %>
              </div>

              <div>
                <%= form.label :description, style: "display: block" %>
                <%= form.text_area :description %>
              </div>

              <div>
                <%= form.label :deadline, style: "display: block" %>
                <%= form.text_area :deadline %>
              </div>

              <div>
                <%= form.submit %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
