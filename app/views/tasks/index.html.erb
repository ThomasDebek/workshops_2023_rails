<section class="vh-100" style="background-color: #eee;">
  <div class="container py- h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-12">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <%= content_tag :div, class: "alert alert-info", id: "notice" do -%>
              <%= notice %>
            <% end if notice.present? -%>

            <h4 class="text-center my-3 pb-3">To Do App</h4>
            <div class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
              <%= button_to "New task", new_task_path, method: :get, class: "btn btn-primary" %>
            </div>

            <table class="table mb-5">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Title</th>
                  <th scope="col">Description</th>
                  <th scope="col">Deadline</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
              <% counter = 1 %>
                <% @tasks.each do |task| %>
                  <tr>
                    <th scope="row"><%= counter %></th>
                    <td><%= task.title %></td>
                    <td><%= task.description %></td>
                    <td><%= task.deadline %></td>
                    <td><%= link_to "Show", task, class: "btn btn-success" %></td>
                    <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %></td>
                    <td><%= button_to "Delete", task, method: :delete, class: "btn btn-danger" %></td>
                  </tr>
                 <% counter += 1 %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
